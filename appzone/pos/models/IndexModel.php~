					INSERT INTO `IQDIARY2` (`DOC_NO` , `DOC_DT` , `DOC_TP` , `FLAG` , `BRAND` , `SHOP` ,  `SEQ` ,  `PRODUCT` ,  `PRICE` , `QUANTITY` , `AMOUNT` , `NET_AMT` , `STATUS` , `STATUS_CREATE` , `DATE_CREATE` , `TIME_CREATE` )
					SELECT     
