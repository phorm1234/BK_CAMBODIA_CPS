			break;

			case "MEM_PT":
					$insert="
					INSERT DELAYED IGNORE INTO `MEM_PT` (`DOC_NO`, `DOC_DT`, `FLAG`, `MEMBER`, `POINT`, `AMOUNT`, `NET_AMT`, `STATUS`, `STATUS_CREATE`, `DATE_CREATE`, `TIME_CREATE`)  
